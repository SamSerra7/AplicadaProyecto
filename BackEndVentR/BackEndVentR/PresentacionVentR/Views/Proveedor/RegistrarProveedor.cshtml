@model PresentacionVentR.Models.Proveedor

@{
    ViewData["Title"] = "RegistrarProveedor";
}
<br>
<br>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <hr />
        <center><h4>Registrar Proveedor</h4></center>

        <hr />
        <br>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" name="Nombre" required id="Nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="Nombre" id="mensaje" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input id="btnEnviar" name="btnEnviar" type="button" value="Guardar " class="btn btn-primary" />
        </div>

    </div>

    <div class="col-md-4">

    </div>
</div>

<div>
    <a asp-action="listarProveedores" class="badge badge-info">Regresar a el listado</a>
</div>
<script src="~/js/jquery-3.3.1.js"></script>
<script src="~/js/RegistrarProveedor.js"></script>