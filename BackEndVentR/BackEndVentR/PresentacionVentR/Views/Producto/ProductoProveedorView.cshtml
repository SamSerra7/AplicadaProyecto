@model IEnumerable<PresentacionVentR.Models.Proveedor>

@{
    ViewData["Title"] = "ProductoProveedorView";
}

<center> <h3>Seleccione un proveedor para administrar sus productos</h3> </center>
<div class="row">
    <div class="col-md-12">
        <center>
            <form id="Form" class="col-md-6" method="Post" asp-action="Buscar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <select id="IdProveedor" name="IdProveedor" class="form-control">
                        @foreach (var item in Model)
                        {
                            <option value=@Html.ValueFor(modelItem => item.IdProveedor) > 
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </option>

                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            </form>
        </center>
    </div>
</div>
