@model IEnumerable<PresentacionVentR.Models.Producto>

@{
    ViewData["Title"] = "Index";

}
<center ><h4>Lista de productos</h4> </center>
<hr />
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.idProducto)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                @*<th>
                      @Html.DisplayNameFor(model => model.precio)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.urlImg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.detalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.activo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idProducto)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>*@

                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.urlImg)" width="50" height="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.activo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.ActionLink("Detalle", "Details", new { id = item.idProducto })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>